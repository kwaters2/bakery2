<div class="row page orders">
  <div class="itemsPage">
    <div class"container">
      <div class="content">
        
<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Order date</th>
      <th>User</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.order_date %></td>
        <td><%= order.user %></td>
        <td><%= order.status %></td>
        <td><%= link_to 'Show', order, :class=>"btn btn-outline-primary" %></td>
        <td><%= link_to 'Edit', edit_order_path(order), :class=>"btn btn-outline-primary" %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-outline-primary" %></td>
        
     
        
      </tr>
    <% end %>
  </tbody>
</table>

