<div class="row page">
  <div class="heading-area">
    <div class="container">
      <div class="content">
         <h1>About Our Bakery</h1>
         <h3>It's not just a piece of cake. It's a masterpiece of cake.</h3>
      </div>
    </div>
  </div> 
    <% if @items.length ==0 %>
        <div class="info">
            <div class="container">
            <h2>This Category has no products</h2>
            </div>
        </div>
    <% end %>
  
  <div class="container">
     <div class="content body-txt">
      <h1>Please look at our selection of cakes</h1>
        <% @items.each do |item| %>
            <div class="itemhols">
                <h1><%= item.name %></h1>
                <%= image_tag item.image, :class=>"itemholsIm" %>
                <p>This item is in the category: <%= item.category %></p>
            </div>
        <% end %>
    
    </div>
  </div>
    
</div>