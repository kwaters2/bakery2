<p id="notice"><%= notice %></p>




<% if @items.length ==0 %>
<H1 class="py-5 text-center">Your search did not match any results.</h1>
<br>
<H2 class="py-5 text-center">Would you like to try different type of cakes instead?</h2>
<% end %>




<div class="row">
    <% @items.each do |item| %>
    
    
    
 <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 text-center">
    
    <h2><%= item.name %></h2>
        <h4>Price: â‚¬ <%= item.price %></h4>
        <p>Calories per Serving: <%= item.caloriesPerServing %></p>
        <p>Gluten Free: 
        <%  if item.glutenFree? %>Yes
        <% else %>No 
        <% end %></p>
        <p>Item contains Nuts: 
        <% if item.containsNuts? %>Yes
        <% else %>No 
        <% end %>
        </p>
        <%= link_to (image_tag item.image, :class=>"img-responsive"), item %>
     <p><%= item.description %></p>
    
    <p>
     <a href="/cart/<%= item.id %>" class="btn btn-primary">add to Cart</a>
    
    
       
    <% if session[:login] == 1 %>
    

    <%= link_to 'Edit', edit_item_path(item) %>
    <%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %>
    <%= link_to 'Show', item, :class=>"btn btn-primary" %>
    <% end %>  
    </p>
 </div>
<% end %>
</div>

<br>

<%= link_to 'New Item', new_item_path, :class=>"btn btn-primary", :role=>"button" %>
