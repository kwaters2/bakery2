<p id="notice"><%= notice %></p>


<div class="row">
  <div class="itemsPage">
    <div class"container">
      <div class="content body-txt">
        <h1>See full range of our delicious Cakes!</h1>
        <% @items.each do |item| %>
         <div class="col-md-3 text-center cake">
             <span class="imgHols">
            <%= link_to (image_tag item.image, :class=>"img-responsive"), item %>
             </span>
                <h3><%= item.name %></h3>
                <h4>Price: â‚¬ <%= item.price %></h4>
                <p>Calories per Serving: <%= item.caloriesPerServing %>
                <br>Gluten Free: 
                <%  if item.glutenFree? %>Yes
                <% else %>No 
                <% end %>
                <br>Item contains Nuts: 
                <% if item.containsNuts? %>Yes
                <% else %>No 
                <% end %>
                
             <br><%= item.description %></p>
            
            
             <a href="/cart/<%= item.id %>" class="btn btn-secondary">add to Cart</a>
            <%= link_to 'Show', item, :class=>"btn btn-primary" %>
            
               
            <% if session[:login] == 1 %>
        
            <%= link_to 'Edit', edit_item_path(item) %>
            <%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>  
            
         </div>
        <% end %>
    </div>
    </div>
  </div>
</div>

<%= link_to 'New Item', new_item_path, :class=>"button", :role=>"button" %>


