<%= form_with(model: item, local: true) do |form| %>
        <% if item.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>
      
            <ul>


            <% item.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
        
        <div class="field">
          <label>Image</label>
          <%= form.text_field :image, id: :item_image %>
        </div>
        <div class="field">
          <label>Name</label>
          <%= form.text_field :name, id: :item_name %>
        </div>
        <div class="field">
          <label>Price</label>
          <%= form.text_field :price, id: :item_price %>
        </div>
        <div class="field">
          <label>Category</label>
           <%= select_tag(:category_id, options_for_select(@categories, :selected => item.category_id), :prompt => 'Select one!' ) %>
          </div>
      
        <div class="field">
          <label>Calories per Serving</label>
          <%= form.number_field :caloriesPerServing, id: :item_caloriesPerServing %>
        </div>
      
        <div class="field">
          <label>Gluten Free</label>
          <%= form.check_box :glutenFree, id: :item_glutenFree , :class => 'gluten' %>
        </div>
      
        <div class="field">
          <label>Contains Nuts</label>
          <%= form.check_box :containsNuts, id: :item_containsNuts , :class => 'nuts' %>
        </div> 
      
        <div class="field">
          <label>Description</label>
          <%= form.text_area :description, id: :item_description %>
        </div>
      
        
        <div class="actions">
          <%= form.submit 'Submit' , :class => 'btn btn-primary'  %>
        </div>
      <% end %>
      </div>   
